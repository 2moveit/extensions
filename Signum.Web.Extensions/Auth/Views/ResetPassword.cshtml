@{
    ViewBag.Title = Resources.ResetPassword;
}
<script type="text/javascript">    $(function () { $("#email").focus(); }); </script>
<div class="sf-reset-password-container">
    <h2>@Resources.ResetPassword</h2>
    <p>@Resources.ForgotYourPassword</p>
    @Html.ValidationSummary()
    @using (Html.BeginForm())
        {
        <div class="sf-reset-password-form">
            <label for="email">
                Email</label>:
            @Html.TextBox("email", "", new { size = 30 })
            @Html.ValidationMessage("email")
            <input class="sf-button" type="submit" />
        </div>
        }
</div>
