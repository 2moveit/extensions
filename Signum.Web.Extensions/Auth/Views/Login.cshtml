@{  
    ViewBag.Title = AuthMessage.Login.NiceToString();
}
<script type="text/javascript">
    $(function () { $("#username").focus(); });
</script>
<br />
<div class="container">
    <div class="col-md-offset-2">
        <h2>Login</h2>
        <p>
            @AuthMessage.IntroduceYourUserNameAndPassword.NiceToString()
        </p>
    </div>
    @Html.ValidationSummary()
    @using (Html.BeginForm())
    {
        <div class="form-horizontal">
            <div class="form-group">
                <label for="username" class="col-sm-2 control-label">@AuthMessage.User.NiceToString()</label>
                <div class="col-sm-10">
                    @Html.TextBox("username", null, new { @class = "form-control", placeholder = AuthMessage.User.NiceToString() })
                    @Html.ValidationMessage("username")
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="col-sm-2 control-label">@AuthMessage.Password.NiceToString()</label>
                <div class="col-sm-10">
                    @Html.Password("password", null, new { @class = "form-control", placeholder = AuthMessage.Password.NiceToString() })
                    @Html.ValidationMessage("password")
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                            @Html.CheckBox("rememberMe") @AuthMessage.RememberMe.NiceToString()
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">@AuthMessage.Login.NiceToString()</button>
                     @if (AuthClient.ResetPasswordStarted)
                    {
                        <div id="sf-login-reset-password">@Html.ActionLink(AuthMessage.IHaveForgottenMyPassword.NiceToString(), "resetPassword", "auth")</div>
                    }
                </div>
            </div>
            @if (ViewData.ContainsKey("referrer"))
            { 
                @Html.Hidden("referrer", ViewData["referrer"]) 
            }
        </div>
    }
</div>
