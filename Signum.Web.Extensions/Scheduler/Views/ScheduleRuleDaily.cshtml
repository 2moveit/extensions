@using Signum.Engine
@using Signum.Entities.Scheduler

@using (var e = Html.TypeContext<ScheduleRuleDailyDN>())
{
    DateTime d = e.Value.StartingOn.ToUserInterface();
    @Html.Field("Start Date", Html.TextBox(e.Compose("Date"), d.Date.ToShortDateString(), new { @class = "sf-value-line sf-datepicker" }))
    @Html.Field("Hour", Html.TextBox(e.Compose("Hour"), d.Hour.ToString("00")))
    @Html.Field("Minute", Html.TextBox(e.Compose("Minute"), d.Minute.ToString("00")))
}