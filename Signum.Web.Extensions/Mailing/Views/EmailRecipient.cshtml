@using Signum.Entities.Mailing

@using (var sc = Html.TypeContext<EmailRecipientDN>())
{
    using (Html.FieldInline())
    {
    @Html.ValueLine(sc, c => c.Kind)
    @Html.ValueLine(sc, c => c.EmailAddress)
    @Html.ValueLine(sc, c => c.DisplayName)
    }
    
    @Html.EntityLine(sc, er => er.EmailOwner)
}
