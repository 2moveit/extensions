@using Signum.Entities.Mailing

@using (var sc = Html.TypeContext<EmailRecipientDN>())
{
    using (Html.FieldInline())
    {
    @Html.ValueLine(sc, c => c.Kind)
    @Html.EntityLine(sc, c => c.EmailOwner)
    @Html.ValueLine(sc, c => c.EmailAddress, vl => vl.ValueHtmlProps.Add("style", "width:250px"))
    @Html.ValueLine(sc, c => c.DisplayName, vl => vl.ValueHtmlProps.Add("style", "width:250px"))
    }
}
