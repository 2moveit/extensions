@using Signum.Entities.Alerts
@using (var cp = Html.TypeContext<AlertDN>())
{
    @Html.ValueLine(cp, d => d.CreacionDate, vl => vl.ReadOnly = true)
    @Html.EntityLine(cp, d => d.Target, vl => vl.ReadOnly = true)
    @Html.EntityCombo(cp, d => d.AlertType)
    @Html.ValueLine(cp, d => d.AlertaDate)

    if (cp.Value.Attended)
    {
    @Html.ValueLine(cp, d => d.AttendedDate, vl => vl.ReadOnly = true)
    @Html.EntityLine(cp, d => d.AttendedBy, vl => vl.ReadOnly = true)
    }
    @Html.ValueLine(cp, d => d.Text, vl =>
    {
        vl.ValueLineType = ValueLineType.TextArea;
        vl.ValueHtmlProps["rows"] = 6;
        vl.ValueHtmlProps["cols"] = 100;
    })
}
