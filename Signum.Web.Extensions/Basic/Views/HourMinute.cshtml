@using Signum.Engine
@using (var e = Html.TypeContext<HourMinuteDN>())
{
    using (Html.FormInline())
    {
        @Html.ValueLine(e, f => f.Hour, vl => vl.ValueHtmlProps["size"] = 2)
        @Html.Span("", ":", "form-control sf-time-separator", new Dictionary<string, object> { { "style", "font-weight:bold" } })
        @Html.ValueLine(e, f => f.Minute, vl => vl.ValueHtmlProps["size"] = 2)
    }
}
