<UserControl x:Class="Signum.Windows.Authorization.Role"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:m="clr-namespace:Signum.Windows;assembly=Signum.Windows"
    xmlns:d="clr-namespace:Signum.Entities.Authorization;assembly=Signum.Entities.Extensions"
    m:Common.TypeContext="d:RoleDN" MinWidth="300">
    <StackPanel >
        <m:ValueLine LabelText="_Name" m:Common.Route="Name"/>
        <GroupBox Header="Sub-Roles">
            <m:EntityList m:Common.Route="Roles" Height="100" />
        </GroupBox>
        <GroupBox  Header="Refered By" >
            <StackPanel>
                <m:SearchControl x:Name="ReferedBySc"  SearchOnLoad="True" QueryName="{x:Static d:RoleQueries.ReferedBy}"   >
                    <m:SearchControl.FilterOptions>
                        <m:FilterOption Path="Refered" Operation="EqualTo" Value="{Binding DataContext, ElementName=ReferedBySc}"  Frozen="True"/>
                    </m:SearchControl.FilterOptions>
                </m:SearchControl>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</UserControl>
