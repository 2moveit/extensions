<UserControl x:Class="Signum.Windows.Operations.LogOperation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:m="clr-namespace:Signum.Windows;assembly=Signum.Windows"
    xmlns:d="clr-namespace:Signum.Entities.Operations;assembly=Signum.Entities.Extensions"
    m:Common.TypeContext="d:LogOperationDN"
    MinWidth="300">
    <StackPanel m:Common.IsReadOnly="True">
        <m:EntityCombo m:Common.Route="Operation" />
        <m:EntityLine m:Common.Route="Target" />
        <m:ValueLine m:Common.Route="Start" />
        <m:ValueLine m:Common.Route="End" />
        <m:EntityLine m:Common.Route="User" />
        <GroupBox Header="Exception" m:Common.Route="Exception" m:Common.CollapseIfNull="True">
            <TextBlock Text="{Binding}"/>
        </GroupBox>
    </StackPanel>
</UserControl>
