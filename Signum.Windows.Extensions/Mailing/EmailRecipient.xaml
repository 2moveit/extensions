<UserControl x:Class="Signum.Windows.Mailing.EmailRecipient"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:m="clr-namespace:Signum.Windows;assembly=Signum.Windows"
    xmlns:d="clr-namespace:Signum.Entities.Mailing;assembly=Signum.Entities.Extensions"
    MinWidth="300">
    <StackPanel>
        <m:ValueLine m:Common.Route="EmailOwner" />
        <m:ValueLine m:Common.Route="EmailAddress" />
        <m:ValueLine m:Common.Route="DisplayName" />
        <m:ValueLine m:Common.Route="Kind" />
    </StackPanel>
</UserControl>
