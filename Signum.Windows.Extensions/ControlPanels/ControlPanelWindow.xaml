<Window x:Class="Signum.Windows.Extensions.ControlPanels.ControlPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:m="clr-namespace:Signum.Windows;assembly=Signum.Windows"
        xmlns:swcp="clr-namespace:Signum.Windows.ControlPanels"
        SizeToContent="WidthAndHeight"
	    ResizeMode="CanResizeWithGrip" 
	    WindowStartupLocation="CenterScreen" 
        m:Monitors.AdjustToMonitor="true"
        m:Monitors.CenterOnSizedToContent="true"
        Title="ControlPanelWindow" Height="300" Width="300">
    <Grid>
        <DockPanel LastChildFill="True" >
            <Border BorderThickness="0,0,0,1" DockPanel.Dock="Top">
                <Border.BorderBrush>
                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                        <GradientStop Color="#000046AD" Offset="1"/>
                        <GradientStop Color="#000046AD"/>
                        <GradientStop Color="#FF0046AD" Offset="0.51"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFD9ECFF" Offset="0.015"/>
                        <GradientStop Color="#FFEAF3F6" Offset="0.205"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border BorderThickness="0,0,0,3" Padding="2" >
                    <Border.BorderBrush>
                        <RadialGradientBrush GradientOrigin="0.5,0.3" RadiusX="1.5">
                            <GradientStop Color="#00569AFF" Offset="1"/>
                            <GradientStop Color="#00569AFF" Offset="0.53"/>
                            <GradientStop Color="#FF65A3FE" Offset="0.82"/>
                            <GradientStop Color="#7309316A" Offset="0.797"/>
                        </RadialGradientBrush>
                    </Border.BorderBrush>
                    <StackPanel  TextBlock.Foreground="{DynamicResource BlueBorder}" HorizontalAlignment="Left" Orientation="Vertical" Margin="6">
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="tbEntityId" TextBlock.FontWeight="SemiBold"  IsReadOnly="True" Foreground="#ff333333" BorderThickness="0" FontSize="18" Background="{x:Null}"/>
                            <Button x:Name="navigate" Click="navigate_Click" Style="{StaticResource RoundButton}" Content="{StaticResource Navigate}"/>
                            <Button x:Name="reload" Click="reload_Click" Style="{StaticResource RoundButton}">
                                <Image Source="pack://application:,,,/Signum.Windows;component/Images/reload.png" Width="16" Height="16" />
                            </Button>
                        </StackPanel>
                        <TextBox x:Name="tbEntityToStr" Text="{Binding ToStringProperty, Mode=OneWay}" IsReadOnly="True" Foreground="#ff666666" Background="Transparent" BorderThickness="0" FontSize="14" />
                    </StackPanel>
                </Border>
            </Border>
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Focusable="False">
                <m:DataBorder>
                    <swcp:ControlPanelView/>
                </m:DataBorder>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</Window>
