<UserControl x:Class="Signum.Windows.ControlPanels.Admin.LinkListPart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:m="clr-namespace:Signum.Windows;assembly=Signum.Windows"
    xmlns:d="clr-namespace:Signum.Entities.ControlPanel;assembly=Signum.Entities.Extensions"
    m:Common.TypeContext="d:LinkListPartDN"
    MinWidth="300">
    <StackPanel>
        <m:EntityRepeater m:Common.Route="Links" ViewOnCreate="False">
            <m:EntityRepeater.EntityTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <m:ValueLine m:Common.Route="Label" />
                        <m:ValueLine m:Common.Route="Link" />
                    </StackPanel>
                </DataTemplate>
            </m:EntityRepeater.EntityTemplate>
        </m:EntityRepeater>
    </StackPanel>
</UserControl>
