<UserControl x:Class="Signum.Windows.Extensions.Basics.DateSpan"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:m="clr-namespace:Signum.Windows;assembly=Signum.Windows"
    xmlns:seeb="clr-namespace:Signum.Entities.Extensions.Basics;assembly=Signum.Entities.Extensions"
    m:Common.TypeContext="seeb:DateSpanDN" MinWidth="300">
        
    <StackPanel Orientation="Horizontal" m:Common.LabelWidth="60">
        <m:ValueLine m:Common.Route="Years" Margin="0,0,20,0"/>
        <m:ValueLine m:Common.Route="Months" Margin="0,0,20,0"/>
        <m:ValueLine m:Common.Route="Days" Margin="0,0,20,0"/>
    </StackPanel>
</UserControl>
