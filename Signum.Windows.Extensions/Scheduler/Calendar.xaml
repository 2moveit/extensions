<UserControl x:Class="Signum.Windows.Scheduler.Calendar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:m="clr-namespace:Signum.Windows;assembly=Signum.Windows"
    xmlns:d="clr-namespace:Signum.Entities.Scheduler;assembly=Signum.Entities.Extensions"
    m:Common.TypeContext="d:CalendarDN"
    MinWidth="300">
    <StackPanel>
        <m:ValueLine m:Common.Route="Name" />
        <GroupBox Header="Holydais">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <m:EntityList m:Common.Route="Holydais" ViewOnCreate="False" Grid.Column="0" />
                <m:DataBorder m:Common.Route="Holydais/" Grid.Column="1">
                    <StackPanel>
                        <m:ValueLine m:Common.Route="Date" />
                        <m:ValueLine m:Common.Route="Name" />
                    </StackPanel>
                </m:DataBorder>
            </Grid>
        </GroupBox>
    </StackPanel>
</UserControl>
