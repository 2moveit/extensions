<UserControl x:Class="Signum.Windows.Chart.UserChart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:m="clr-namespace:Signum.Windows;assembly=Signum.Windows"
    xmlns:c="clr-namespace:Signum.Windows.Chart"
    xmlns:dn="clr-namespace:Signum.Entities.Chart;assembly=Signum.Entities.Extensions"
    m:Common.TypeContext="{x:Type dn:UserChartDN}">
    <StackPanel>
        <m:EntityLine m:Common.Route="Query" m:Common.IsReadOnly="True" />
        <m:ValueLine m:Common.Route="DisplayName"/>
        <m:EntityLine m:Common.Route="Related"  />
        <m:EntityRepeater m:Common.Route="Filters" Grid.IsSharedSizeScope="true" Margin="4" Icon="../Images/filter.png" MinHeight="100">
            <m:EntityRepeater.EntityTemplate>
                <DataTemplate>
                    <Grid m:Common.LabelVisible="False">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition SharedSizeGroup="token" MinWidth="100" Width="Auto"/>
                            <ColumnDefinition SharedSizeGroup="operation" MinWidth="100" Width="Auto"/>
                            <ColumnDefinition SharedSizeGroup="value" MinWidth="100" Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <m:QueryTokenBuilder SubTokensEvent="QueryTokenBuilderFilter_SubTokensEvent" Token="{Binding Token}" />
                        <ComboBox Grid.Column="1" VerticalAlignment="Center"
                                  SelectedItem="{Binding Operation}" 
                                  ItemsSource="{Binding Token, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={x:Static m:Converters.TokenOperations}}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={x:Static m:Converters.EnumDescription}}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <m:ValueLine m:Common.Route="ValueString" Grid.Column="2"/>
                    </Grid>
                </DataTemplate>
            </m:EntityRepeater.EntityTemplate>
        </m:EntityRepeater>
        
        <c:ChartBuilder x:Name="chartBuilder"/>

        <GroupBox Margin="4" Style="{StaticResource EntityGroupBox}">
            <GroupBox.Header>
                <StackPanel Orientation="Horizontal">
                    <Image Source="../Images/order.png" Stretch="None"/>
                    <TextBlock m:Common.LabelOnlyRoute="Orders"/>
                </StackPanel>
            </GroupBox.Header>
            <m:EntityList m:Common.Route="Orders" Grid.IsSharedSizeScope="true" Move="True"  >
                <m:EntityList.EntityTemplate>
                    <DataTemplate>
                        <Grid m:Common.LabelVisible="False" m:Common.TypeContext="{m:ContinueRoute /}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition SharedSizeGroup="orderType" MinWidth="100" Width="Auto"/>
                                <ColumnDefinition SharedSizeGroup="token" MinWidth="100" Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <m:QueryTokenBuilder SubTokensEvent="QueryTokenBuilderOrders_SubTokensEvent"  Token="{Binding Token}"/>
                            <m:ValueLine m:Common.Route="OrderType" Grid.Column="1" VerticalAlignment="Center" />
                        </Grid>
                    </DataTemplate>
                </m:EntityList.EntityTemplate>
            </m:EntityList>
        </GroupBox>
    </StackPanel>
</UserControl>
